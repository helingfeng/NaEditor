{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "moduleResolution": "node",
    "module": "esnext",
    "lib": ["dom", "es7"],
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true, //允许默认导出
    "strict": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
